---
import Layout from "../../layouts/Layout.astro"
const allPosts = await Astro.glob('../posts/*.md');
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];

---

<Layout title="index tags">
    <h1>it works</h1>
    <div> {tags.map((tag) => (
        <p><a href={`/tags/${tag}`}>{tag}</a></p>
      ))}</div>
</Layout>